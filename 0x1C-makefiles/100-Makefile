# Variables
CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

# Rules
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Object files rule without using %.o: %.c
$(OBJ): %.o : %.c
	$(CC) -c $< -o $@

# Clean rules
clean:
	$(RM) *~ \#*\# $(NAME) *.o

oclean:
	$(RM) *.o

fclean: clean
	$(RM) $(OBJ)

re: fclean all

# Header dependency
$(OBJ): m.h

.PHONY: all clean oclean fclean re

